      breadcrumbs_data = {
        label: 'Thông tin tài khoản',
        link: '/account/information'
      }
    } else if (flags == 1) {
      breadcrumbs_data = {
        label: 'Đơn hàng',
        link: '/account/orders'
      }
    } else if (flags == 2) {
      breadcrumbs_data = {
        label: 'Sản phẩm yêu thích',
        link: '/account/favorites'
      }
    } %>
    <%- include('../../partials/breadcrumbs', { 
      data: [
        { label: 'Trang chủ', link: '/' },
        { label: 'Trang cá nhân', link: '#' },
        breadcrumbs_data,
      ]
     }) %>
