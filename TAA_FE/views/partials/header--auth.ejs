<header class="visible un-radius">
  <div class="header__top">
    <div class="container">
      <a href="/TAA_FE/src/homepage/">
        <img class="header__logo" src="/TAA_FE/public/logo.svg" alt="Logo TAA">
      </a>
      <span class="header__search search-bar">
        <input class="label-large" type="text" placeholder="Tìm kiếm"
          list="data--search" id="search">
        <datalist id="data--search">
          <option value="Vòng tay"></option>
          <option value="Vòng cổ"></option>
          <option value="Túi"></option>
          <option value="Cài tóc"></option>
          <option value="Nhẫn"></option>
        </datalist>
        <button class="btn-icon btn--filled" type="submit">
          <span class="status-layer icon material-symbols-outlined">
            search</span>
        </button>
      </span>
      <div class="header__wrapper">
        <a href="/TAA_FE/src/homepage/cart/" style="text-decoration: none;">
          <!-- <button class="btn-icon">
            <span
              class="status-layer icon icon--filled material-symbols-outlined">
              shopping_cart</span>
          </button> -->
          <%- include('../components/button', {
            type: 'btn-icon',
            icon: 'shopping_cart'
          }) %>
        </a>
        <label for="header__user--controller"
          class="header__user--controller__label">
          <span class="header__name">Nguyễn Văn A</span>
          <img class="header__avatar" src="/TAA_FE/public/avatar.png"
            alt="Avatar">
        </label>
        <input type="checkbox" id="header__user--controller">
        <div class="header__user label-small">
          <a href="/TAA_FE/src/homepage/account/">Thông tin cá nhân</a>
          <a href="/TAA_FE/src/homepage/account/">Đơn hàng</a>
          <a href="/TAA_FE/src/homepage/account/">Sản phẩm yêu thích</a>
          <a href="/TAA_FE/src/homepage/">Đăng xuất</a>
        </div>
      </div>
    </div>
  </div>
  <nav class="main-nav">
    <ul class="container visible label-large">
      <li class="main-nav__item active">
        <a class="main-nav__link" href="/TAA_FE/src/homepage/">Trang chủ</a>
      </li>
      <li class="main-nav__item">
        <a class="main-nav__link" href="/TAA_FE/src/homepage/products/">Sản
          phẩm</a>
      </li>
      <li class="main-nav__item">
        <a class="main-nav__link" href="/TAA_FE/src/homepage/news/">Tin
          tức</a>
      </li>
      <li class="main-nav__item">
        <a class="main-nav__link" href="/TAA_FE/src/homepage/about/">Về
          chúng tôi</a>
      </li>
      <li class="main-nav__item">
        <a class="main-nav__link"
          href="/TAA_FE/src/homepage/user-manual/">Hướng dẫn sử dụng</a>
      </li>
    </ul>
  </nav>
</header>