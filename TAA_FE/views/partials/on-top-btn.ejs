<button id="on-top-btn" class="btn-icon btn--outlined" onclick="scrollOnTop()">
  <span class="status-layer icon--filled material-symbols-outlined">
    keyboard_double_arrow_up
  </span>
</button>
<script>
  const scrollOnTop = () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    visibleBtn();
  });

  const visibleBtn = () => {
    window.addEventListener('scroll', () => {
      const onTopBtn = document.getElementById('on-top-btn');
      if (window.scrollY >= 1500) {
        onTopBtn.style.opacity = '1';
      } else if (1500 > window.scrollY && window.scrollY >= 500) {
        onTopBtn.style.opacity = (window.scrollY - 500) / 100;
      } else if (window.scrollY < 500) {
        onTopBtn.style.opacity = '0';
      }
    })
  }
</script>